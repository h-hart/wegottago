%h2.sidebar-title
  .col-sm-6
    = @user_display_name
    Interests
  %small.col-sm-6.text-right
    = link_to "View All of "+@user_display_name+" Interests", interest_path(@user.id) 

- if @user.interests.uniq.size > 0
  - @user.interests.uniq.each do |interest|
    %span.interest
      %span.cval= interest.name
-else
  .row
    - if @is_own_profile
      %h2.grey-msg You have no Interests
    - else
      %h2.grey-msg #{@user.name} has no Interests
