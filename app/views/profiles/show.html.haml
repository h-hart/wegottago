:coffee
  $ ->
    m = new GottaGo.Models.User({ id: "#{@user.id}" })
    new GottaGo.Views.UserInline({ model: m, scroll: "#{params[:i]}" })
.user-info-section
  = render 'header', user: @user
  = render 'header_bottom_nav', user: @user
  %section
    .container.borderize.roundize.whitebg
      .row
        .col-md-4
          = render 'right_sidebar'

        .col-md-8.user-friends
          .col-md-6.profile-title
            - if signed_in_and_is_current? @user.id
              %span.name My Friends 
            - else
              %span.name #{@user.name}'s Friends 
            %span.count 
              = @user.count_of_friends
          .col-md-6.all-items
            - if signed_in_and_is_current? @user.id
              =link_to "View All of my Friends", friends_path(:id => @user.id) 
            - else
              =link_to "View All of #{ @user.name}'s Friends", friends_path(:id => @user.id) 
          .row
            .col-md-12.short-friend-list
              .col-md-12
                - if @user.count_of_friends > 0
                  - @user.get_friends(:is_limit=>true).each do |friend|
                    =link_to profile_path(friend), class: 'item-friend' do
                      .friend-info
                        = image_tag friend.avatar_url(:thumb), class: ''
                        .darken-bg
                        .friend-name= friend.name
                - else
                  - if signed_in_and_is_current? @user.id
                    %h2.grey-msg You have no friends
                  - else
                    %h2.grey-msg #{ @user.name} has no friends

          = render 'activities/short_list'

          #interests-section.row
            .col-md-12
              = render 'interests'
          
