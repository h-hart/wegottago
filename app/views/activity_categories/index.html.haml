%section.categories
  .col-md-12.main-category

  / .col-md-12.main-category{style: "background: url(#{ @main.wide_image_url }) no-repeat center center; width:100% !important; position:relative; z-index:999; "}
  .container
    = link_to activity_category_activities_explore_path(activity_category_id: @main.id) do
      %img{:src => "#{ @main.wide_image_url }", :class => "size"}

      .col-md-12.categories-list
      .row
        - @activity_categories.each do |category|
          =link_to activity_category_activities_explore_path(activity_category_id: category.id) do
            .col-md-4.category
              .category-image
                
                = image_tag category.small_image_url, class: ''
              .col-md-9.category-info
                / .category-name= category.name
                .category-followers
                  / = User.tagged_with( category.interest_list, :any => true).uniq.count
                  .posted_by
                    = image_tag "profilepics/128.jpg", class: "posted_by_pic"
                  .posted_by
                    = image_tag "profilepics/129.jpg", class: "posted_by_pic"
                  .posted_by
                    = image_tag "profilepics/130.jpg", class: "posted_by_pic"
                  .posted_by
                    = image_tag "profilepics/131.jpg", class: "posted_by_pic"
                  .posted_by
                    = image_tag "profilepics/132.jpg", class: "posted_by_pic"
                  .posted_by
                    = image_tag "profilepics/133.jpg", class: "posted_by_pic"
      %p.back-top
        %a{:href => ".top"}
          %span>
          Back to Top

