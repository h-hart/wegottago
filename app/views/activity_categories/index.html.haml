%section.categories
  %img.category-banner{ src: asset_path('explore-activities.png') }

  .container
    .col-md-12.categories-list
      .row
        - @activity_categories.each do |category|
          = render partial:  'activities/tile', locals: { category: category }
      %p.back-top
        %a{:href => ".top"}
          %span>
          Back to Top

