.col-md-6.col-md-push-3.homepage-block.margin-top.backgroundize.roundize3.signup-step
  .page-header.text-center
    %em Go for it!
    %br
    Find things that Interest you!
  .block-footer
    .wizard-block
      .row.categories-list
        - @activity_categories.each do |category|
          .col-md-4.category
            .category-image.sign-up
              = image_tag category.small_image_url, class: ''
          .interests-list
            %button.close.close-interests Ã—
            - category.interests.each_with_index do |i, index|
              .col-md-4.interest-item.new
                %span.glyphicon.glyphicon-plus
                = i.name

      = simple_form_for(@user, :url => wizard_path, :method => :put, :html => {:class => 'form-vertical', :multipart => true  }) do |f|
        = f.error_notification
        = display_base_errors @user
        .row
          .col-sm-12
            .text-right
              %small
                These will help us connect you with people who share your interests.
                %br
                Please select at least 6 ...but, the more you add the better!
        .row.text-center
          .col-sm-12
            = f.hidden_field :interest_list
            = f.button :submit, 'Next!', :class => 'btn-pink set-interests', :style=> 'width: 100px;', disabled: true

        
        

