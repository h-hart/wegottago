.col-md-6.col-md-push-3.homepage-block.margin-top.backgroundize.roundize3.signup-step
  .page-header.text-center
    Please add a photo.
    %br
    Everyone wants to see your smiling face.
  .block-footer
    .wizard-block
      = simple_form_for(@user, url: wizard_path, wrapper: :horizontal, :method => :put, :html => {class: 'form-horizontal upload_form', multipart: true, encoding: "multipart/form-data", enctype: "multipart/form-data" }) do |f|
        = f.error_notification
        = display_base_errors @user
        .row
          .col-sm-6.photo-upload-choice
            .title Upload Photo
            .subtitle From your computer
            .file_upload
              %div.file-label No File Chosen..
              = f.input :avatar, label: false, as: :file, input_html: { onchange: "readURL(this);" }
          .col-sm-6.photo-upload-choice
            .title Import Photo
            .subtitle From your Facebook Profile
            %a.facebook-photo-import{ href: 'javascript:void(0);' }
              = image_tag 'fb-logo.png'
        .row
          .col-sm-12
            .text-right
              %small
                Photos are required on WeGottaGo!
                %br
                Upload one now. You can always change it later.               
        .row.text-center
          .col-sm-12
            = f.button :submit, 'Next', :class => 'btn-pink', :style=> 'width: 100px;'


