.col-md-12
  %br
  = simple_form_for(resource, as: resource_name, wrapper: :horizontal_radios, url: registration_path(resource_name, tab: 'my-account'), html: { method: :put, class: 'form-horizontal'}) do |f|
    = display_base_errors resource

    - if resource.provider
      %h5 
        Sorry, you can't edit your 
        %span.underline email, 
        and 
        %span.underline password, 
        because, you are signed-in with 
        %span.bold Facebook.
    - else
      = f.input :email
      / = f.input :zipcode
      = f.input :current_password, hint: "we need your current password to confirm your changes", required: true
      %br
      = f.input :password, autocomplete: "off", label: 'New password'
      = f.input :password_confirmation, required: false, hint: "leave it blank if you don't want to change it", required: false
      

      %button.btn.btn-pink.arrowed.pull-right{type: 'submit'} Update
.clearfix
%br