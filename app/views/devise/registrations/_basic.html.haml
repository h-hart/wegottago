.col-md-12
  %h3 Basics
  %br
  = simple_form_for(resource, as: resource_name, wrapper: :horizontal_radios, url: registration_path(resource_name, tab: 'basic'), html: { method: :put, class: 'form-horizontal'}) do |f|
    = display_base_errors resource

    = f.input :name, label: 'First Name', required: false

    = f.input :last_name

    = f.input :show_initials, as: :boolean, inline_label: 'Only show the initial of my last name', label: "."

    = f.input :sex, collection: [['Male', 'Male'], ['Female', 'Female']], label_method: :last, value_method: :first, as: :radio, label: 'Gender'

    = f.input :birthdate, label: 'Date of birth', start_year: Date.today.year - 100, end_year: Date.today.year - 10, order: [:day, :month, :year]

    = f.input :age_private, as: :boolean, inline_label: 'Make my age private', label: "."

    = f.input :visible_for_registered, as: :boolean, inline_label: 'Make my profile visible to registered users only', label: "."

    = f.input :location, label: 'Location'
    .form-group
      .col-sm-3
      .col-sm-9
        #user-location-map{style: 'width: 100%; height: 200px; margin-top: -35px;'}

    = f.hidden_field :loc_lat
    = f.hidden_field :loc_lng


    %button.btn.btn-pink.arrowed.pull-right{type: 'submit'} Update
.clearfix
%br