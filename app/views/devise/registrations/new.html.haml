.col-md-6.col-md-push-3.homepage-block.margin-top.backgroundize.roundize3
  = render 'page_modals'
  = render 'signup_wizard/header'
  .block-footer
    %p.pull-top or
    .wizard-block
      %h3.text-center
        Sign up using your email address
      = simple_form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => {:class => 'form-vertical', :multipart => true  }) do |f|
        = f.error_notification
        = display_base_errors resource
        = f.input :name, :autofocus => true, placeholder: 'First Name', label: false
        = f.input :last_name, placeholder: 'Last (We only show the first letter)', label: false
        = f.input :email, :required => true, placeholder: 'Email', label: false
        = f.input :password, :required => true, placeholder: 'Password', label: false
        %section.sign_up-bottom
          .row
            .col-md-12.text-center
              = f.button :submit, 'Join', :class => 'btn-pink', style: 'width: 80px;'
            .col-md-12
              By clicking, you confirm that you accept our
              = link_to 'Terms of Service', '#', data: { target: "#terms_of_service_modal", toggle: "modal"}
              &
              = link_to 'Privacy Policy', '#', data: { target: "#privacy_policy_modal", toggle: "modal"}
