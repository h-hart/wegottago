.col-md-12
  %h3 Friend preferences
  %br
  = simple_form_for(resource, as: resource_name, wrapper: :horizontal_radios, url: registration_path(resource_name, tab: 'preferences'), html: { method: :put, class: 'form-horizontal'}) do |f|
    = display_base_errors resource

    = f.simple_fields_for :friend_preference do |pref_f|
      .row
        .col-md-12
          .col-md-3.control-label
            %label.control-label Friends who are
          .col-md-3
            = pref_f.input :gender_male, as: :boolean, inline_label: 'Male'
          .col-md-3
            = pref_f.input :gender_female, as: :boolean, inline_label: 'Female'

        .col-md-12
          .col-md-3.control-label
            %label.control-label Who are
          .col-md-3
            = pref_f.input :status_single, as: :boolean, inline_label: 'Single'
          .col-md-3
            = pref_f.input :status_married, as: :boolean, inline_label: 'Married'
          .col-md-3
            = pref_f.input :status_in_relationship, as: :boolean, inline_label: 'In relationship'

        .col-md-12
          .col-md-3.control-label
            %label.control-label Who have
          .col-md-3
            = pref_f.input :kids, as: :boolean, inline_label: 'Kids'
          .col-md-3
            = pref_f.input :no_kids, as: :boolean, inline_label: 'No kids'
          .col-md-3
            = pref_f.input :expecting_kids, as: :boolean, inline_label: 'Expecting'

        .col-md-12
          .col-md-3.control-label
            %label.control-label Who are
          .col-md-3
            = pref_f.input :orientation_straight, as: :boolean, inline_label: 'Straight'
          .col-md-3
            = pref_f.input :orientation_gay, as: :boolean, inline_label: 'Gay'
          .col-md-3
            = pref_f.input :orientation_bisexual, as: :boolean, inline_label: 'Bisexual'
      .row
        .col-md-5.age.from-age
          = pref_f.input :age_from, collection: (10..70), as: :select, label: 'Who are aged between', input_html: {class: 'age-select'}
        .col-md-5.age.to-age
          = pref_f.input :age_to, collection: (10..70), as: :select, label: 'to', input_html: {class: 'age-select'}

      .row
        .col-md-12
          %button.btn.btn-pink.arrowed.pull-right{type: 'submit'} Update
.clearfix
%br
